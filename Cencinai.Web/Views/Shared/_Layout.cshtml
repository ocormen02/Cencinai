<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cencinai</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-theme.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/cencinai.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link href="~/sweetAlert/sweetalert.css" rel="stylesheet" />
    <link href="~/css/loading.css" rel="stylesheet" />
    <script src="~/sweetAlert/sweetalert.min.js"></script>
    <script src="~/js/Loading.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index" onclick="displayBusyIndicator()">Cencinai</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Niño" asp-action="ListarNiños" onclick="displayBusyIndicator()">Niños</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Responsable" asp-action="ListarResponsables" onclick="displayBusyIndicator()">Responsables</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="NivelDesarrollo" asp-action="Index" onclick="displayBusyIndicator()">Nivel Desarrollo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="EstadoNutricional" asp-action="Index" onclick="displayBusyIndicator()">Estado Nutricional</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Reportes" asp-action="Index" onclick="displayBusyIndicator()">Reportes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Usuario" asp-action="ListarUsuarios" onclick="displayBusyIndicator()">Usuarios</a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Login" asp-action="CerrarSesion" onclick="displayBusyIndicator()">Cerrar Sesión</a>
                        </li>
                    </ul>                        
                </form>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @Html.Partial("_NotificationPanel")
            @Html.Partial("_Loading")
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Cencinai
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
