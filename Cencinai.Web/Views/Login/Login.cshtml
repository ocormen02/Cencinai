@model Cencinai.Logic.Models.UsuarioModel

@{
    ViewData["Title"] = "Ingreso de Sistema";
    Layout = null;
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link href="~/css/login.css" rel="stylesheet" />
<link href="~/css/loading.css" rel="stylesheet" />

<div class="loading">
    Loading&#8230;
</div>
<div class="wrapper fadeInDown">
    <div id="formContent">
        <div id="formTop">
        </div>
        <br />
        <div class="fadeIn first">
        </div>
        <br />
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreUsuario" for="NickName"></label>
                <input asp-for="NombreUsuario" autocomplete="off" type="text" class="form-control fadeIn second" id="NombreUsuario" aria-describedby="NickName" placeholder="Nombre Usuario">

            </div>
            <div class="form-group">
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contraseña"></label>
                <input asp-for="Contraseña" type="password" class="form-control fadeIn third" id="Contraseña" aria-describedby="Contraseña" placeholder="Contraseña">

            </div>
            <div class="form-group">
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>
            <br />
            <input type="submit" class="fadeIn fourth" value="Acceder" onclick="displayBusyIndicator()">
        </form>
        <div id="formFooter">
        </div>
    </div>
</div>
<script src="~/js/Loading.js"></script>

